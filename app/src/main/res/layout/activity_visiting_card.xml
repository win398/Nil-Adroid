<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VisitingCardActivity"
    android:background="@drawable/bg_card">
    <!--    导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/visiting_card_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_card"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_visiting_card"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:id="@+id/visiting_card_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/xui_config_color_gray_3"
            android:id="@+id/visiting_card_account"/>
        <ImageView
            android:id="@+id/visiting_card_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/visiting_card_account"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/visiting_card_tip"
            android:textColor="@color/black_light"
            android:layout_below="@id/visiting_card_code"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/visiting_card_save"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_btn_visiting_card"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@id/visiting_card_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/download"
            android:id="@+id/visiting_card_download_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_below="@id/visiting_card_download_icon"
            android:textColor="@color/black_light"/>
    </RelativeLayout>
</RelativeLayout>