<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天12:10"
        android:textColor="#393232"
        android:gravity="center_horizontal"
        android:id="@+id/chat_time_left"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_time_left"
        android:padding="8dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/left_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/loadingheader"
            app:shapeAppearance="@style/circleImageStyle"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/left_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"
            android:text="hahahahahahahaha"
            android:textSize="18sp"
            android:background="@drawable/bg_chat_left"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/left_header"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>


</RelativeLayout>