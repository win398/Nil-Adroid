<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#F8F3F3"
    android:gravity="center_vertical"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="RtlSymmetry"
    android:id="@+id/msg_item_container">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/msg_item_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/header"
        app:shapeAppearance="@style/circleImageStyle"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/msg_item_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="神里绫华（Kamisato Ayaka）"
                android:textSize="16sp"
                android:textColor="#1E1D1D"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="8dp">
                <TextView
                    android:id="@+id/msg_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午10:28"
                    android:textColor="#5C5656"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>

        </LinearLayout>
        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingEnd="50dp"
            android:id="@+id/msg_card_content_container"
            app:badge_horizontalMargin="10dp"
            android:gravity="center_vertical"
            app:badge_draggable="true">
            <TextView
                android:id="@+id/msg_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="稻妻神里流太刀术皆传——神里绫华，参上！请多指教哦。"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:textColor="#5C5656"
                android:ellipsize="end"
                android:maxLines="1"/>
        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

    </LinearLayout>
</LinearLayout>